[
    {
        "name": "ohNet",
        "type": "external",
        "platform-specific": true,
        "version": "1.32.4350_m1",
        "cross-check": false,
        "archive-filename": "${name}-${platform}-${debugmode}.tar.gz",
        "archive-path": "dls/ohNet-Linux-x64-Release.tar.gz",
        "dest": "dependencies/${platform}/",
        "configure-args": [
            "--ohnet-lib-dir", "${main-dir}/lib",
            "--ohnet-include-dir", "${main-dir}/include/ohnet"
        ]
    },
    {   "name": "TestTones",
        "type": "external",
        "version": "1.9",
        "cross-check": false,
        "archive-path": "http://core.linn.co.uk/~artifacts/artifacts/testtones/TestTones-${version}.zip",
        "dest": "dependencies/AnyPlatform/TestTones/"
    },
    {   "name": "libplatform",
        "type": "internal",
        "version": "0.63.796",
        "cross-check": false,
        "archive-suffix": "-${debugmode}",
        "platform-ignore": {
            "Core-ppc32": false,
            "*": true },
        "ignore": "${platform-ignore[$platform]}"
    },
    {   "name":             "libosa",
        "type":             "internal",
        "version":          "0.2.277",
        "cross-check":      false,
        "archive-suffix":   "-Release",
        "platform-ignore": {
            "Core-ppc32": false,
            "*": true },
        "ignore":           "${platform-ignore[$platform]}"
    },
    {   "name":             "testharness",
        "version":          "0.1.58",
        "cross-check":      false,
        "type":             "openhome",
        "archive-filename": "${name}-${version}.tar.gz",
        "dest":             "dependencies/AnyPlatform/"
    },
    {   "name":             "Reprog",
        "version":          "0.1.70",
        "cross-check":      false,
        "type":             "internal",
        "archive-filename": "${name}-${version}-${host-platform}-Release.tar.gz",
        "platform-ignore": {
            "Core-ppc32": false,
            "*": true },
        "ignore":           "${platform-ignore[$platform]}",
        "dest":             "dependencies/${host-platform}/Reprog/"
    },
    {
        "name":             "hardware",
        "version":          "4.855.36595",
        "cross-check": false,
        "type":             "internal",
        "archive-filename": "${name}-Core1-${version}.tar.gz",
        "dest":             "dependencies/AnyPlatform/${name}/"
    },
    {   "name":             "transmute",
        "version":          "0.2.48",
        "cross-check":      false,
        "type":             "internal",
        "archive-filename": "${name}-${version}.tar.gz",
        "platform-ignore": {
            "Core-ppc32": false,
            "*": true },
        "ignore":           "${platform-ignore[$platform]}",
        "dest":             "dependencies/AnyPlatform/"
    },
    {
        "name": "FunctionalTest",
        "type": "openhome",
        "version": "0.0.1263",
        "cross-check": false,
        "platform-specific": false,
        "archive-filename": "FunctionalTest-${version}.zip",
        "dest": "dependencies/AnyPlatform/FunctionalTest"
    }
]
